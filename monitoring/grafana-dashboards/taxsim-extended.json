{
  "title": "TaxSim Advanced Dashboard",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "container_cpu_usage_seconds_total",
          "legendFormat": "{{pod}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "targets": [
        { "expr": "container_memory_usage_bytes", "legendFormat": "{{pod}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests",
      "targets": [
        { "expr": "http_requests_total", "legendFormat": "{{method}}" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Request Latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ],
  "schemaVersion": 30,
  "version": 1
}
